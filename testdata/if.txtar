! exec maru2 continues
cmp stderr stderr.txt
cmp stdout stdout.txt

! exec maru2 fails
stderr 'ERRO exit status 1'

-- tasks.yaml --
tasks:
  fails:
    - run: exit 1

  continues:
    - run: echo 0
    - if: failure()
      run: echo 1
    - run: echo 2
    - uses: fails
    - run: echo 3
    - if: always()
      run: echo 4
    - run: echo 5
    - if: always()
      run: echo 6
    - if: failure()
      run: echo 7

