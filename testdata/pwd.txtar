mkdir foo
mkdir testdata/foo

exec maru2 pwd
cmp stderr stderr.txt
cmpenv stdout stdout.txt

exec maru2 pwd -f testdata/pwd.yaml
cmpenv stdout stdout2.txt

exec maru2 pwd -C testdata -f pwd.yaml
cmpenv stdout stdout3.txt

-- stdout.txt --
$WORK
$WORK
$WORK/foo
-- stdout2.txt --
$WORK
$WORK/foo
-- stdout3.txt --
$WORK/testdata
$WORK/testdata/foo
-- stderr.txt --
pwd
pwd
pwd
-- tasks.yaml --
schema-version: v0
tasks:
  pwd:
    - run: pwd
    - uses: file:testdata/pwd.yaml?task=pwd
-- testdata/pwd.yaml --
schema-version: v0
tasks:
  pwd:
    - run: pwd
    - run: pwd
      dir: foo
