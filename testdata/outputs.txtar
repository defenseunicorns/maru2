exec maru2 color
cmp stderr stderr.txt
stdout 'The selected color is green'

-- tasks.yaml --
tasks:
  color:
    - run: |
        echo "selected-color=green" >> $MARU2_OUTPUT
      id: color-selector
    - run: echo "The selected color is ${{ from "color-selector" "selected-color" }}"
-- stderr.txt --
$ echo "selected-color=green" >> $MARU2_OUTPUT
$ echo "The selected color is green"
