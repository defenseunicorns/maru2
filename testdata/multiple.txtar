exec maru2 hello-world default echo --with name=Jeff
cmp stderr stderr.txt
cmp stdout stdout.txt

-- tasks.yaml --

name:
  description: "Name to greet"

date:
  description: "Date to use"
  default: "now"

default:
  - run: echo "default"

hello-world:
  - run: echo "Hello, World!"

echo:
  - run: echo "Hello, ${{ input "name" }}, today is $INPUT_DATE"
-- stderr.txt --
$ echo "Hello, World!"
$ echo "default"
$ echo "Hello, Jeff, today is $INPUT_DATE"
-- stdout.txt --
Hello, World!
default
Hello, Jeff, today is now
