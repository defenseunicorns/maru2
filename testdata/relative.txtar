exec maru2 -l debug
stdout 'default\ndefault\ncallback\n'

-- tasks.yaml --
schema-version: v0
tasks:
  default:
    - run: echo "default"
    - uses: file:dir/maru2-other.yaml

  callback:
    - run: echo "callback"

-- dir/maru2-other.yaml --
schema-version: v0
tasks:
  default:
    - run: echo "default"
    - uses: file:../tasks.yaml?task=callback
